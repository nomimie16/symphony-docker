<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text><text y=%221.3em%22 x=%220.2em%22 font-size=%2276%22 fill=%22%23fff%22>sf</text></svg>">
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body>
        <nav class="navbar navbar-expand-lg navbar-dark rose border border-light">
            <a class="navbar-brand ms-4" href="https://localhost/home">MySymphonyApp</a>
            <a class="navbar-brand mr-2" href="https://localhost/home">
                {{ ux_icon ('bi:backpack',  {height : '25px', width : '25px'},) }}
              </a>
            <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
              <div class="navbar-nav">
                <a class="nav-item nav-link active" href="https://localhost/lucky">Lucky</a>
                <a class="nav-item nav-link active" href="https://localhost/about">About</a>
                <li class="nav-item dropdown">
                    <a href="https://localhost/article" class="nav-link dropdown-toggle nav-link active"" data-bs-toggle="dropdown">Article</a>
                    <div class="dropdown-menu">
                        <a href="https://localhost/article/list" class="dropdown-item">Liste des articles</a>
                        <div class="dropdown-divider"></div>
                        {% if is_granted('ROLE_ARTICLE_ADMIN') or  is_granted('ROLE_SUPER_ADMIN') %}
                            <a href="https://localhost/article/new" class="dropdown-item">Créer un article</a>
                            <a href="https://localhost/article/generate" class="dropdown-item">Générer un article</a>

                        {% endif %}
                        
                    </div>
                </li>
                <li class="nav-item dropdown">
                    <a href="https://localhost/article" class="nav-link active dropdown-toggle" data-bs-toggle="dropdown">Commentaire</a>
                    <div class="dropdown-menu">
                        <a href="https://localhost/commentaire" class="dropdown-item ">Commentaires</a>
                        <div class="dropdown-divider"></div>
                        <a href="https://localhost/commentaire/generate" class="dropdown-item">Generate commentaire</a>
                    </div>
                </li>
                {% if app.user %}
                    <li class="nav-item dropdown">
                        <a href="https://localhost/admin" class="nav-link active dropdown-toggle" data-bs-toggle="dropdown">Administration</a>
                        <div class="dropdown-menu">
                            <a href="https://localhost/admin" class="dropdown-item ">Administration Utilisateurs</a>
                            <a href="https://localhost/admin/userslist" class="dropdown-item">Liste des utilisateurs</a>
                            <div class="dropdown-divider"></div>
                            <a href="https://localhost/admin/test1" class="dropdown-item">Admin Test 1</a>
                            <a href="https://localhost/admin/test2" class="dropdown-item">Admin Test 2</a>
                            
                        </div>
                    </li>
                {% endif %}
                  </div>
                  

                    <form class="form-inline ms-auto me-3">
                      {% if app.user %}
                          <a class="btn btn-sm btn-outline-light mx-1" href="https://localhost/logout">Se déconnecter</a>
                      {% else %}
                          <a class="btn btn-sm btn-outline-light mx-1" href="https://localhost/login">Se connecter</a>
                      {% endif %}
                      {% if app.user %}
                        <a class="btn btn-sm btn-outline-light mx-1" href="https://localhost/profile">{{ app.user.email }}</a>
                      {% else %}
                          <a class="btn btn-sm btn-outline-light mx-1" href="https://localhost/register">S'enregister</a>
                      {% endif %}
                      <a class="navbar-brand mx-1" href="#">
                        {{ ux_icon ('bi:question-circle',  {height : '25px', width : '25px'},) }}
                      </a>
                    </form>

                  
              </div>
            </div>
        </nav>
        {% block body %}{% endblock %}
    </body>
</html>
